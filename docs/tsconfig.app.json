{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "es2015",
    "module": "es2015",
    "baseUrl": ".",
    "types": []
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "../src/framework/**/*.spec.ts",
    "assets/**/*.ts",
    "dist/**/*",
    "../src/framework/**/schematics/**/*"
  ],
  "include": [
    "../docs/**/*",
    "../src/playground/**/*",
    "../src/app/dynamic.component.ts"
  ]
}
